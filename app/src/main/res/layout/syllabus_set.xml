<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".SyllabusSet">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="0dp"
        android:scrollbars="none"
        tools:layout_editor_absoluteY="51dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="51dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/selector_background_gradient_x"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawableLeft="@drawable/ic_arrow_back_white_24dp"
                            android:elevation="0dp"
                            android:paddingRight="1dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingRight="1dp"
                            android:text="Customize your Syllabus"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:textColor="#ffffff"
                            android:paddingLeft="1dp" />

                    </LinearLayout>

                </LinearLayout>




            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_input"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/bag"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Your syllabus is all set"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textScaleX="1"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:text="We have created your custom syllabus for Class 12th along with NSO, Science Foundation, USO and NISO"
                    android:textColor="#727272"
                    android:textScaleX="1"
                    android:textSize="18dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center"
                        android:text="You have unlocked"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#727272"
                        android:textScaleX="1"
                        android:textAllCaps="true"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/selector_background_syllabus_details">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/selector_background_syllabus_brief"
                            android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_margin="20dp"
                                    android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:background="@drawable/selector_one"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/book"
                                                android:layout_gravity="center"/>

                                    </LinearLayout>

                                        <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:gravity="center"
                                            android:layout_marginTop="10dp"
                                            android:fontFamily="sans-serif-medium"
                                            android:text="95"
                                            android:textColor="#000000"
                                            android:textSize="16dp" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                android:gravity="center"
                                                android:text="Chapters to learn"
                                                android:textColor="#000000"
                                                android:textSize="13dp" />



                                    </LinearLayout>


                                </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/selector_background_syllabus_brief"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_margin="20dp"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:background="@drawable/selector_two"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/video_white"
                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="352"
                                        android:textColor="#000000"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:gravity="center"
                                        android:text="Hours of video lectures"
                                        android:textColor="#000000"
                                        android:textSize="13dp" />



                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/selector_background_syllabus_brief"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_margin="20dp"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:background="@drawable/selector_three"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/white_flag"
                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="505"
                                        android:textColor="#000000"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:gravity="center"
                                        android:text="Goals to clear"
                                        android:textColor="#000000"
                                        android:textSize="13dp" />



                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center"
                        android:text="You can always change your syllabus later in settings"
                        android:textColor="#727272"
                        android:textScaleX="1"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center"
                        android:text="EDIT SYLLABUS"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1e509d"
                        android:textScaleX="1"
                        android:textAllCaps="true"
                        android:textSize="18dp" />

                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:background="@drawable/selector_button_forgot"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="ToLearn"
                    android:text="Next"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>